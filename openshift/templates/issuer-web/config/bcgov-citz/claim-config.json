{
  "questions": [
    {
      "name": "givenName",
      "type": "text",
      "title": "First Name:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "additionalName",
      "type": "text",
      "title": "Additional Names:",
      "placeHolder": "",
      "defaultValue": "Not Issued",
      "isRequired": true,
      "readOnly": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "familyName",
      "type": "text",
      "title": "Last Name:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "dateOfBirth",
      "type": "text",
      "inputType": "date",
      "title": "Date of Birth:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "streetAddress",
      "type": "text",
      "title": "Street Address:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "addressNotes",
      "type": "text",
      "title": "Address Notes:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "postalCode",
      "type": "text",
      "title": "Postal Code:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "locality",
      "type": "text",
      "title": "City:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "region",
      "type": "text",
      "title": "Province:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "country",
      "type": "text",
      "title": "Country:",
      "placeHolder": "",
      "defaultValue": "Canada",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "phoneNumber",
      "type": "text",
      "title": "Phone Number:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "alternatePhoneNumber",
      "type": "text",
      "title": "Alternate Phone Number:",
      "placeHolder": "",
      "defaultValue": "N.A.",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "email",
      "type": "text",
      "title": "Email Address:",
      "placeHolder": "",
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "type": "dropdown",
      "name": "gender",
      "title": "Gender:",
      "isRequired": true,
      "colCount": 0,
      "choices": [
        "Not Disclosed",
        "Female",
        "Male",
        "Non-Binary"
      ]
    },
    {
      "name": "issuer",
      "type": "text",
      "title": "Issuer:",
      "placeHolder": "",
      "defaultValue": "Ministry of Citizens' Services",
      "isRequired": true,
      "readOnly": true,
      "requiredErrorText": "Required Field"
    },
    {
      "type": "text",
      "name": "issueDate",
      "title": "Issue Date:",
      "readOnly": true,
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "expirationDate",
      "type": "text",
      "title": "Expiration Date:",
      "readOnly": true,
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "name": "IdentityLevelOfAssurance",
      "type": "text",
      "title": "Identity Assurance Level:",
      "placeHolder": "",
      "defaultValue": "N.A.",
      "readOnly": true,
      "isRequired": true,
      "requiredErrorText": "Required Field"
    },
    {
      "type": "text",
      "name": "placeholder",
      "defaultValue": "placeholder",
      "readOnly": true,
      "visibleIf": "{issueDate} empty"
    }
  ],
  "triggers": [
    {
      "type": "runexpression",
      "expression": "{placeholder} notempty",
      "runExpression": "setCurrentDate('issueDate')"
    },
    {
      "type": "runexpression",
      "expression": "{dateOfBirth} notempty",
      "runExpression": "setFutureDate('expirationDate', 'dateOfBirth')"
    }
  ]
}
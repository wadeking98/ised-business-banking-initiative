{
  "showProgressBar": "top",
  "pages": [
    {
      "title": "Organization Details - page {pageno} of {pagecount}.",
      "questions": [
        {
          "name": "orgID",
          "type": "text",
          "title": "Organization ID:",
          "placeHolder": "",
          "isRequired": true,
          "readOnly": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "CRABusinessNumber",
          "type": "text",
          "title": "Business Number:",
          "placeHolder": "",
          "isRequired": true,
          "readOnly": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "orgType",
          "type": "text",
          "title": "Entity Type:",
          "placeHolder": "",
          "defaultValue": "BC Corp",
          "isRequired": true,
          "readOnly": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "orgLegalName",
          "type": "text",
          "title": "Registered Legal Name:",
          "placeHolder": "",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "homeJurisdictionLegalName",
          "type": "text",
          "title": "Home Jurisdiction Legal Name:",
          "placeHolder": "",
          "defaultValue": "",
          "isRequired": false,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "alternateOrgLegalName",
          "type": "text",
          "title": "Alternate Legal Name:",
          "placeHolder": "",
          "defaultValue": "",
          "isRequired": false,
          "requiredErrorText": "Required Field"
        }
      ]
    },
    {
      "title": "Organization Address - page {pageno} of {pagecount}.",
      "questions": [
        {
          "name": "streetAddress",
          "type": "text",
          "title": "Street Address:",
          "placeHolder": "",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "addressType",
          "type": "text",
          "title": "Address Type:",
          "placeHolder": "",
          "defaultValue": "Mailing",
          "readOnly": true,
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "addressNotes",
          "type": "text",
          "title": "Address Notes:",
          "placeHolder": "",
          "defaultValue": "",
          "readOnly": true,
          "isRequired": false,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "locality",
          "type": "text",
          "title": "Locality:",
          "placeHolder": "",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "region",
          "type": "text",
          "title": "Region:",
          "placeHolder": "",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "country",
          "type": "text",
          "title": "Country:",
          "placeHolder": "",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "postalCode",
          "type": "text",
          "title": "Postal Code:",
          "placeHolder": "",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        }
      ]
    },
    {
      "title": "Registration Details - page {pageno} of {pagecount}.",
      "questions": [
        {
          "name": "legislation",
          "type": "text",
          "title": "Legislation:",
          "placeHolder": "",
          "defaultValue": "",
          "isRequired": false,
          "readOnly":true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "homeJurisdiction",
          "type": "text",
          "title": "Home Jurisdiction:",
          "placeHolder": "",
          "defaultValue": "BC",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "legislationJuisdiction",
          "type": "text",
          "title": "Legislation Jurisdiction:",
          "placeHolder": "",
          "defaultValue": "BC",
          "readOnly": true,
          "isRequired": true,
          "requiredErrorText": "Required Field"
        }
      ]
    },
    {
      "title": "Organization Directors - page {pageno} of {pagecount}.",
      "questions": [
        {
          "name": "givenName",
          "type": "text",
          "title": "Given Name:",
          "placeHolder": "",
          "readOnly": true,
          "requiredErrorText": "Required Field",
          "visibleIf": "{CRABusinessNumber} empty"
        },
        {
          "name": "familyName",
          "type": "text",
          "title": "Family Name:",
          "placeHolder": "",
          "readOnly": true,
          "requiredErrorText": "Required Field",
          "visibleIf": "{CRABusinessNumber} empty"
        },
        {
          "name": "directorCount",
          "type": "text",
          "title": "Director Count:",
          "placeHolder": "",
          "defaultValue": "1",
          "readOnly": true,
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "directorList",
          "type": "text",
          "title": "Director List:",
          "placeHolder": "",
          "defaultValue": "",
          "readOnly": true,
          "isRequired": false,
          "requiredErrorText": "Required Field"
        }
      ]
    },
    {
      "title": "Credential Details - page {pageno} of {pagecount}.",
      "questions": [
        {
          "name": "registrationDate",
          "type": "text",
          "title": "Registration Date:",
          "placeHolder": "",
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "legalNameEffectiveDate",
          "type": "text",
          "title": "Registered Legal Name Effective:",
          "placeHolder": "",
          "readOnly": true,
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "homeJurisdictionLegalNameEffectiveDate",
          "type": "text",
          "title": "Home Jurisdiction Legal Name Effective:",
          "placeHolder": "",
          "readOnly": true,
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "issuer",
          "type": "text",
          "title": "Issuer:",
          "placeHolder": "",
          "defaultValue": "BC",
          "readOnly": true,
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "name": "issueDate",
          "type": "text",
          "title": "Issue Date:",
          "placeHolder": "",
          "readOnly": true,
          "isRequired": true,
          "requiredErrorText": "Required Field"
        },
        {
          "type": "text",
          "name": "placeholder",
          "defaultValue": "placeholder",
          "readOnly": true,
          "visibleIf": "{CRABusinessNumber} empty"
        }
      ]
    }
  ],
  "triggers": [
    {
      "type": "runexpression",
      "expression": "{placeholder} notempty",
      "runExpression": "populateFields()"
    },
    {
      "type": "runexpression",
      "expression": "{familyName} notempty && {givenName} notempty",
      "runExpression": "addDirector('givenName','familyName', 'directorList')"
    }
  ]
}